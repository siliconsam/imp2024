#! /bin/bash

CC = gcc ${M32}

BASEDIR = ${IMP_INSTALL_HOME}
BINDIR=${BASEDIR}/bin
LIBDIR=${BASEDIR}/lib
IMPLIB=${LIBDIR}/libimp77.a
#IMPLIB=-limp77
LDSCRIPT=${BINDIR}/ld.i77.script

line="${CC} -no-pie -o $1"

for var in "$@"
do
#    compile="imp77 -c -Fc -Fs -Fi $var.imp"
#    eval $compile

    line=" $line $var.o"
done

line="$line ${IMPLIB} -lm -lc -T ${LDSCRIPT}"

eval $line
